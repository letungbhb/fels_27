<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <% if logged_in? && current_user.is_supervisor? %>
      <%= link_to "Admin panel", root_path, id: "logo" %>
    <% else %>
      <%= link_to "E-System", root_path, id: "logo" %>  
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <% if current_user.is_supervisor? %>
            <li><%= link_to "User", admin_users_path %></li>
            <li><%= link_to "Category", admin_categories_path %></li>
            <li><%= link_to "Word", admin_words_path %></li>
          <% else %>
            <li><%= link_to "Category", categories_path %></li>
            <li><%= link_to "Word", words_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Edit Profile", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>  
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>