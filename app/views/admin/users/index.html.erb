<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
  	<% if !user.is_supervisor? %>
  		<li>
				<div class="col-md-1">
					<%= gravatar_for user, size: 50 %>
				</div>
				<div class="col-md-1">
					<%= link_to user.username, admin_user_path(user.id)  %> 
				</div>
				<div  class="col-md-1">
	  			<%= link_to "Edit", edit_admin_user_path(user.id) , class: "btn btn-success" %>
	  			<%= link_to "Delete", admin_user_path(user.id), method: :delete,data: { confirm: "You sure?" } , class: "btn btn-warning" %>
	  		</div>
	  	</li>
	  <% end %>
  <% end %>
</ul>

<%= will_paginate %>